---
import Layout from "../layouts/Layout.astro";
---

<Layout title="info">
  <div class="flex border w-[1070px] h-[413px] mt-[80px] gap-28">
    <img src="" alt="" class="w-[371px] h-[413px]" />
    <div class="info__content flex flex-col">
      <h1 class="info__title text-7xl">Software Engineer</h1>
      <h2 class="info__description text-lg">
        Hello! My name is Pavel Maksimovich. I'm a masturbator programmer. I
        need money.
      </h2>
    </div>
  </div>
</Layout>

<style scoped>
  .info__title {
    text-shadow: inset 2px 2px 3px 0 rgba(241, 241, 241, 0.3);
    font-weight: 900;
    font-family: var(--font-family);
  }

  .info__content {
    gap: 25px;
  }
</style>
